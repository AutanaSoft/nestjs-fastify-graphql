# Application Configuration
NODE_ENV=development
PORT=3000
APP_USE_GLOBAL_PREFIX=false
APP_GLOBAL_PREFIX=v1

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=airdash
DB_SSL=false
# IMPORTANT: Set DB_SYNCHRONIZE=false in production and use migrations instead
DB_SYNCHRONIZE=false
DB_LOGGING=false
DB_RETRY_ATTEMPTS=3
DB_RETRY_DELAY=3000

# GraphQL Configuration
GRAPHQL_PLAYGROUND=true
GRAPHQL_INTROSPECTION=true

# Security Configuration
# Comma-separated list of trusted domains for CSP and CORS policies
# Example: example.com,api.example.com,cdn.example.com
SECURITY_TRUSTED_DOMAINS=

# CORS Configuration
# Comma-separated list of allowed origins for CORS
# Example: https://example.com,https://app.example.com,https://admin.example.com
# Note: In development, all origins are allowed by default
CORS_ALLOWED_ORIGINS=

# Throttling Configuration
# Time to live (TTL) for the rate limit window in seconds
# Default is 60 seconds
THROTTLER_TTL=60
# Maximum number of requests allowed within the TTL window
# Default is 150 requests
THROTTLER_LIMIT=150
