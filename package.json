{
  "name": "nestjs-graphql-api",
  "version": "0.0.1",
  "description": "API GraphQL modular desarrollada con NestJS y PostgreSQL.",
  "author": "AutanaSoft <admin@autanasoft.com>",
  "private": false,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/AutanaSoft/nestjs-graphql-api.git"
  },
  "bugs": {
    "url": "https://github.com/AutanaSoft/nestjs-graphql-api/issues"
  },
  "scripts": {
    "start:prod": "NODE_ENV=production node dist/main",
    "start:dev": "nest start --watch",
    "start": "nest start",
    "build": "nest build",
    "start:debug": "nest start --debug --watch",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "rimraf coverage .tmp && jest --coverage",
    "test:e2e": "jest --selectProjects e2e --coverage",
    "test:unit": "jest --selectProjects unit --coverage",
    "migration:generate": "typeorm-ts-node-commonjs migration:generate -d src/database/config/typeorm.config.ts",
    "migration:run": "typeorm-ts-node-commonjs migration:run -d src/database/config/typeorm.config.ts",
    "migration:revert": "typeorm-ts-node-commonjs migration:revert -d src/database/config/typeorm.config.ts",
    "migration:show": "typeorm-ts-node-commonjs migration:show -d src/database/config/typeorm.config.ts",
    "schema:sync": "typeorm-ts-node-commonjs schema:sync -d src/database/config/typeorm.config.ts",
    "schema:drop": "typeorm-ts-node-commonjs schema:drop -d src/database/config/typeorm.config.ts",
    "prepare": "husky"
  },
  "dependencies": {
    "@apollo/server": "^4.12.2",
    "@as-integrations/fastify": "^3.0.0",
    "@fastify/cors": "^11.1.0",
    "@fastify/helmet": "^13.0.1",
    "@nestjs/apollo": "^13.1.0",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/graphql": "^13.1.0",
    "@nestjs/platform-fastify": "^11.1.6",
    "@nestjs/throttler": "^6.4.0",
    "@nestjs/typeorm": "^11.0.0",
    "bcryptjs": "^3.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "fastify": "^5.4.0",
    "graphql": "^16.11.0",
    "nestjs-pino": "^4.4.1",
    "pg": "^8.16.3",
    "pino-http": "^10.5.0",
    "pino-pretty": "^13.1.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.27"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.7.8",
    "@swc/core": "^1.13.5",
    "@swc/jest": "^0.2.39",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "concurrently": "^9.2.1",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jest": "^30.0.0",
    "lint-staged": "^16.2.0",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  }
}
